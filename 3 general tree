#include<iostream>
using namespace std;
struct node
{   
    string name;
    int count;
    node* child[10]; 
};
class book
{   
    public:
        node *nnode,*root;
        
        book()
        {
            root=NULL;
        }
 
 
    void creation()
    { 
	   // int choice;
        nnode=new node;
        cout<<"\n enter the Book name :";
        cin>>nnode->name;
        cout<<"\n enter number of chapter :";
        cin>>nnode->count;
        for(int i=0;i<nnode->count;i++)
        {
            nnode->child[i]=new node;
            cout<<"\n enter the chapter name : ";
            cin>>nnode->child[i]->name;
            cout<<"\n enter the no of section :";
            cin>>nnode->child[i]->count;
            for(int j=0;j<nnode->child[i]->count;j++) 
			{
                nnode->child[i]->child[j]=new node;
                cout<<"\n enter section name :";
                cin>>nnode->child[i]->child[j]->name;
                cout<<"\n enter the no of subsection :";
                cin>>nnode->child[i]->child[j]->count;
                for(int k=0;k<nnode->child[i]->child[j]->count;k++) 
				{
                    nnode->child[i]->child[j]->child[k]=new node;
                    cout<<"\nenter subsection name :";
                    cin>>nnode->child[i]->child[j]->child[k]->name;
                    cout<<"\n enter count :";
                    cin>>nnode->child[i]->child[j]->child[k]->count;
                }
            }
	    }
             
    if(root==NULL)
    {
        root=nnode;
    }
}
void display()
{ 
    cout<<"\n OUTPUT\n";
    //do{
        cout<<"\n\t ";
        cout<<nnode->name<<"\n\t"<<""; 
        for(int i=0;i<nnode->count;i++)
        {
            cout<<"\n\t\t"<<nnode->child[i]->name<<"\n\t\t"<<"";
             
            for(int j=0;j<nnode->child[i]->count;j++) 
			{
              
                cout<<"\n\t\t\t"<<nnode->child[i]->child[j]->name;
               
             
                for(int k=0;k<nnode->child[i]->child[j]->count;k++)
			    {
                    cout<<"\n\t\t\t\t"<<nnode->child[i]->child[j]->child[k]->name; 
                }
			}
        }
   // }while(root==NULL); 
    }
};
int main()
{
    book b;
    b.creation();
    b.display();
	return 0; 
}
